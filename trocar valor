// Online C compiler to run C program online
#include <stdio.h>

void trocaValor(int *num1, int *num2){
    int temporario;
    temporario=*num1;
    *num1=*num2;
    *num2=temporario;
    
}

int main() {
    int numero1,numero2;
    printf("Informe dois valores:\n");
    scanf("%d %d",&numero1,&numero2);
    printf("Valores antes da troca:\n%d %d\n",numero1,numero2);

    trocaValor(&numero1,&numero2);

    printf("Valores depois da troca:\n%d %d\n",numero1,numero2);

    return 0;
}
