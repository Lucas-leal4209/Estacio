// Online C compiler to run C program online
#include <stdio.h>

int somarLinha(int matriz[3][3], int linha) {
    int soma=0;
    for (int j=0;j<3;j++) {
        soma=soma+matriz[linha][j];
    }
    return soma;
}

int somarColuna(int matriz[3][3], int coluna) {
    int soma=0;
    for (int i=0;i<3;i++) {
        soma=soma+matriz[i][coluna];
    }
    return soma;
}

int main() {
    int i,j;
    int matriz[3][3];
    printf("Informe os valores da matriz:\n");
    for (i=0;i<3;i++){
        for (j=0;j<3;j++){
            scanf("%d",&matriz[i][j]);
        }
    }
    for (i=0;i<3;i++){
            int soma=somarLinha(matriz,i);
            printf("Linha %d: %d\n",i+1,soma);
        }
    printf("\n");
    for (j=0;j<3;j++){
        int soma=somarColuna(matriz,j);
        printf("Coluna %d: %d\n",i+1,soma);
    }
    return 0;
}
