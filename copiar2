#include <stdio.h>


int main() {
    FILE *ponteiro;
    char nome[] = "Lucas"; // Inicializa a string nome com o valor "Lucas"
    char linha[100]; // Variável para armazenar a palavra lida do arquivo
    int contador = 0;

    ponteiro = fopen("arquivo.txt", "r");

    if (ponteiro == NULL) {
        printf("Erro ao abrir o arquivo.\n");
        return 1;
    }

    while (fscanf(ponteiro, "%s", linha) != EOF) {
        if (strcmp(linha, nome) == 0) { // Compara a palavra lida do arquivo com a string nome
            contador++;
        }
    }

    if(contador>=1){
      printf("O nome está no arquivo.");
    } else{
      printf("O nome não está no arquivo.");
    }

    fclose(ponteiro);

    return 0;
}
