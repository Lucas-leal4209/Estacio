// Online C compiler to run C program online
#include <stdio.h>

int main() {
    int matriz[4][4];
    int maiorLinha,maiorColuna,maiorValor=0;
    
    printf("Insira os valores da matriz:");
    for (int i=0;i<4;i++){
        for (int j=0;j<4;j++){
            scanf("%d",&matriz[i][j]);
        }
    }
    for (int i=0;i<4;i++){
        for (int j=0;j<4;j++){
            if (matriz[i][j]>maiorValor){
                maiorValor=matriz[i][j];
                maiorLinha=i;
                maiorColuna=j;
            }
        }
    }
    for (int i=0;i<4;i++){
        for (int j=0;j<4;j++){
            printf("%d ",matriz[i][j]);
        }
        printf("\n");
    }
    printf("O maior valor estÃ¡ na linha %d, coluna %d, e vale: %d.",maiorLinha+1,maiorColuna+1,maiorValor);
    return 0;
}
