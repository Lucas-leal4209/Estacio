// Online C compiler to run C program online
#include <stdio.h>
#include <string.h>

int main() {
    char linha[100], antigo, novo;
    
    printf("Alimente a string:\n");
    scanf("%s",linha);
    getchar();
    
    printf("Digite o caracter a ser substituido:\n");
    scanf("%c",&antigo);
    getchar();
    
    printf("Digite o caracter que substituir√°:\n");
    scanf("%c",&novo);
    getchar();
    
    for (int i=0;i<strlen(linha);i++){
        if(linha[i] == antigo){
            linha[i] = novo;
        }
    }
    printf("%s",linha);

    return 0;
}
